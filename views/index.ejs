      <div class="grid md:grid-cols-3 gap-12">
        
        <!-- Brand Section -->
        <div class="space-y-6">
          <div class="flex items-center space-x-4">
                          <img src="/kestralworksnotextlogo.svg" alt="Kestrel Works" class="h-12 w-auto">
            <div>
              <h3 class="text-xl font-bold text-brand-red">Kestrel Works</h3>
              <p class="text-sm text-slate-400 font-medium">Digital Solutions</p>
